{
  "name": "@kedaruma/revlm-server",
  "version": "1.0.7",
  "private": false,
  "description": "Self-hosted replacement for MongoDB Realm App Services that brokers auth and MongoDB calls.",
  "keywords": [
    "realm",
    "realm-web",
    "mongodb-realm",
    "mongodb",
    "realm-alternative",
    "app-services",
    "auth"
  ],
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist/"
  ],
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node dist/start.js",
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist node_modules kedaruma-revlm-server-*.tgz",
    "test": "pnpm exec jest --config ../../jest.config.cjs packages/revlm-server/src/__tests__/ --runInBand --watchman=false --verbose"
  },
  "dependencies": {
    "bson": "^6.10.4",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongodb": "^6.20.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "@kedaruma/revlm-shared": "workspace:*"
  },
  "devDependencies": {
    "mongodb-memory-server": "^8.12.2"
  }
}
